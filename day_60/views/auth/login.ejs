<div class="w-50 mx-auto">
  <h1 class="text-center">Đăng nhập</h1>
  <% if (error.length) { %>
  <div class="alert alert-danger text-center"><%= error %></div>
  <% } %>
  <form action="" method="post">
    <div class="mb-3">
      <label for="">Email</label>
      <input
        type="text"
        class="form-control"
        name="email"
        placeholder="Email..."
      />
    </div>

    <div class="mb-3">
      <label for="">Mật khẩu</label>
      <input
        type="password"
        class="form-control"
        name="password"
        placeholder="Mật khẩu..."
      />
    </div>
    <span class="d-flex justify-content-end mb-2">
      <a class="text-danger fw-bold fst-italic" href="/auth/forgot-password"
        >Quên mật khẩu?</a
      ></span
    >
    <div class="d-grid">
      <button class="btn btn-primary">Đăng nhập</button>
      <a href="/auth/google" class="btn btn-danger mt-2"
        >Đăng nhập với Google</a
      >
    </div>
  </form>
  <span class="d-flex justify-content-center fst-italic mb-2"
    >Bạn chưa có tài khoản,
    <a class="text-danger fw-bold" href="/auth/register">
      Đăng ký ngay!</a
    ></span
  >
</div>
